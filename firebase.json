{
    "hosting": {
        "public": "public",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
    },
    "storage": {
        "rules": "storage.rules"
    },
    "emulators": {
        "functions": {
            "port": 5001
        },
        "auth": {
            "port": "9099"
        },

        "firestore": {
            "port": 8080
        },

        "storage": {
            "port": 9199
        },

        "pubsub": {
            "host": "localhost",
            "port": 8085
        },
        "ui": {
            "enabled": true
        },
        "singleProjectMode": true
    }
}
